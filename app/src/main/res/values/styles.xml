<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textViewsBasic" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Mi Perfil Activity -->

    <style name="textViewsMiPerfilText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginStart">52dp</item>
        <item name="android:layout_marginTop">44dp</item>
    </style>

    <style name="textViewsMiPerfilValue" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimary_text</item>
        <item name="android:layout_marginStart">52dp</item>
    </style>

    <!-- Activity -->

    <style name="textViewDatosMain" parent="textViewsBasic">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:textColor">@color/colorPrimary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textViewDatosCard" parent="textViewsBasic">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/colorPrimary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textViewTitulosChicos" parent="textViewsBasic">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/margin_top_titulos</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:textColor">@color/colorPrimary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textViewTitulosChicosCard" parent="textViewsBasic">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/colorPrimary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Liquidacion Activity -->

    <style name="textViewsTitulosLiquidacion" parent="textViewsBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textViewsFechaLiquidacion" parent="textViewsBasic">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">@color/colorPrimary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textViewsTitulosChicosLiquidacion" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary_text</item>
    </style>

    <style name="textViewsValoresLiquidacion" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary_text</item>
    </style>

    <!-- Cada Shift -->

    <style name="fab" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">@dimen/fab_height</item>
        <item name="android:layout_width">@dimen/fab_width</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="textViewSin" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">18sp</item>


    </style>

</resources>
