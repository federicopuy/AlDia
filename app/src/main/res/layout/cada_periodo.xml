<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:padding="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="6dp"
        app:contentPadding="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <TextView
                android:id="@+id/tvHoraIngresoEgreso"
                style="@style/textViewsPeriodo"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvfecha"
                app:layout_constraintVertical_bias="0.578"
                tools:text="10:00 - 12:00" />


            <TextView
                android:id="@+id/tvfecha"
                style="@style/textViewsPeriodo"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="10/03/18" />

            <TextView
                android:id="@+id/tvHorasRegularesText"
                style="@style/textViewsPeriodo"
                android:layout_marginStart="80dp"
                android:layout_marginTop="16dp"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/tvfecha"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Horas Regulares" />


            <TextView
                android:id="@+id/tvHorasRegularesTotales"
                style="@style/textViewsPeriodo"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="80dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvfecha"
                app:layout_constraintStart_toEndOf="@+id/tvfecha"
                app:layout_constraintTop_toBottomOf="@+id/tvHorasRegularesText"
                tools:text="02:01 - $120,50" />

            <TextView
                android:id="@+id/tvHorasExtraText"
                style="@style/textViewsPeriodo"
                android:layout_marginStart="0dp"
                android:layout_marginTop="24dp"
                android:text="Horas Extra"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/tvHorasRegularesTotales"
                app:layout_constraintTop_toBottomOf="@+id/tvHorasRegularesTotales" />

            <TextView
                android:id="@+id/tvHorasExtraTotales"
                style="@style/textViewsPeriodo"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toStartOf="@+id/tvHorasExtraText"
                app:layout_constraintTop_toBottomOf="@+id/tvHorasExtraText"
                tools:text="01:12 - $30,23" />




        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
